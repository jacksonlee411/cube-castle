{
  "name": "cube-castle-api-compliance",
  "version": "1.0.0",
  "description": "API合规性检查工具配置 (ADR-008实施)",
  "scripts": {
    "lint": "npm run lint:frontend-api",
    "guard:plan245": "node scripts/quality/plan245-guard.js",
    "guard:selectors-246": "node scripts/quality/selector-guard-246.js",
    "toolchain:health": "bash scripts/quality/toolchain-health.sh --scope all",
    "quality:preflight": "node scripts/quality/document-sync.js && npm run guard:selectors-246 && npm --prefix frontend run lint",
    "lint:changed:testid": "bash scripts/quality/lint-changed.sh",
    "lint:api": "spectral lint docs/api/openapi.yaml --fail-on-unmatched-globs",
    "lint:api:watch": "spectral lint docs/api/openapi.yaml --watch",
    "lint:frontend-api": "eslint -c eslint.config.architecture.mjs 'frontend/src/**/*.{ts,tsx}'",
    "lint:audit": "node scripts/quality/lint-audit.js",
    "lint:docs": "node scripts/quality/doc-archive-check.js",
    "lint:validation": "node scripts/quality/lint-validation.js",
    "schema:positions": "bash scripts/check-graphql-schema-sync.sh",
    "compliance:check": "npm run lint:api && npm run lint:frontend-api",
    "compliance:fix": "eslint -c eslint.config.architecture.mjs 'frontend/src/**/*.{ts,tsx}' --fix",
    "test:compliance": "npm run compliance:check && echo '✅ API合规性检查通过'",
    "build:analyze": "tsc -b && vite build",
    "fields:add": "node scripts/fields/add.js",
    "guard:fields": "node scripts/quality/preflight-field-standard.js",
    "quality:preflight": "node scripts/quality/document-sync.js && npm run guard:selectors-246 && npm --prefix frontend run lint && npm run guard:fields"
  },
  "devDependencies": {
    "@graphql-inspector/cli": "^5.0.8",
    "@playwright/test": "^1.56.0",
    "@stoplight/spectral-cli": "^6.15.0",
    "@stoplight/spectral-rulesets": "^1.22.0",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "core-js": "^3.46.0",
    "eslint": "^9.30.1",
    "graphql": "^16.11.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^27.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "api-compliance",
    "openapi",
    "spectral",
    "eslint",
    "adr-008"
  ],
  "package-lock": "false"
}
