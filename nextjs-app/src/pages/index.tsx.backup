// src/pages/index.tsx
import React from 'react';
import { Card, Typography, Row, Col, Button, Space } from 'antd';
import { 
  UserOutlined, 
  ApartmentOutlined, 
  DashboardOutlined, 
  HistoryOutlined,
  PlayCircleOutlined,
  RightOutlined 
} from '@ant-design/icons';
import { useRouter } from 'next/router';

const { Title, Text, Paragraph } = Typography;

const HomePage: React.FC = () => {
  const router = useRouter();

  const features = [
    {
      title: '员工管理',
      description: '全面的员工信息管理，支持CRUD操作和实时数据更新',
      icon: <UserOutlined style={{ fontSize: '32px', color: '#1890ff' }} />,
      path: '/employees',
      highlight: '核心功能'
    },
    {
      title: '职位历史',
      description: '时态数据查询，追踪员工职位变更历史和时间线',
      icon: <HistoryOutlined style={{ fontSize: '32px', color: '#52c41a' }} />,
      path: '/employees',
      highlight: '时态数据'
    },
    {
      title: '组织架构',
      description: '可视化组织结构，Neo4j图数据库支持的层级关系',
      icon: <ApartmentOutlined style={{ fontSize: '32px', color: '#faad14' }} />,
      path: '/organization/chart',
      highlight: '图数据库'
    },
    {
      title: 'SAM 智能分析',
      description: 'AI驱动的组织分析，实时监控和智能决策支持',
      icon: <DashboardOutlined style={{ fontSize: '32px', color: '#722ed1' }} />,
      path: '/sam/dashboard',
      highlight: 'AI 分析'
    },
    {
      title: '工作流管理',
      description: 'Temporal.io驱动的业务流程自动化和审批管理',
      icon: <PlayCircleOutlined style={{ fontSize: '32px', color: '#f5222d' }} />,
      path: '/workflows/demo',
      highlight: '工作流'
    }
  ];

  const stats = [
    { label: '测试覆盖率', value: '89%', color: '#1890ff' },
    { label: '性能指标', value: '优秀', color: '#52c41a' },
    { label: '生产就绪', value: '95%', color: '#722ed1' },
    { label: '功能完整性', value: '100%', color: '#faad14' }
  ];

  return (
    <div style={{ padding: '24px', maxWidth: '1200px', margin: '0 auto' }}>
      {/* Hero Section */}
      <Card style={{ marginBottom: 32, textAlign: 'center', background: 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)' }}>
        <div style={{ padding: '48px 24px', color: 'white' }}>
          <Title level={1} style={{ color: 'white', marginBottom: 16 }}>
            员工模型管理系统
          </Title>
          <Title level={3} style={{ color: 'rgba(255,255,255,0.9)', fontWeight: 400, marginBottom: 24 }}>
            Employee Model Management System v2.0
          </Title>
          <Paragraph style={{ color: 'rgba(255,255,255,0.8)', fontSize: '16px', maxWidth: '600px', margin: '0 auto 32px' }}>
            基于时态数据模型的现代化员工管理系统，集成Temporal.io工作流、Neo4j图数据库和AI智能分析
          </Paragraph>
          <Space size="large">
            <Button 
              type="primary" 
              size="large" 
              onClick={() => router.push('/employees')}
              icon={<UserOutlined />}
            >
              开始使用
            </Button>
            <Button 
              size="large" 
              style={{ color: 'white', borderColor: 'white' }}
              onClick={() => router.push('/sam/dashboard')}
              icon={<DashboardOutlined />}
            >
              AI 分析
            </Button>
          </Space>
        </div>
      </Card>

      {/* Stats Section */}
      <Row gutter={16} style={{ marginBottom: 32 }}>
        {stats.map((stat, index) => (
          <Col span={6} key={index}>
            <Card style={{ textAlign: 'center' }}>
              <div style={{ fontSize: '32px', color: stat.color, marginBottom: 8, fontWeight: 'bold' }}>
                {stat.value}
              </div>
              <Text type="secondary">{stat.label}</Text>
            </Card>
          </Col>
        ))}
      </Row>

      {/* Features Section */}
      <Title level={2} style={{ textAlign: 'center', marginBottom: 32 }}>
        核心功能模块
      </Title>
      
      <Row gutter={[24, 24]}>
        {features.map((feature, index) => (
          <Col span={8} key={index}>
            <Card
              hoverable
              style={{ height: '100%', cursor: 'pointer' }}
              onClick={() => router.push(feature.path)}
              bodyStyle={{ padding: '24px', height: '100%', display: 'flex', flexDirection: 'column' }}
            >
              <div style={{ textAlign: 'center', marginBottom: 16 }}>
                {feature.icon}
                <div style={{ 
                  marginTop: 8, 
                  padding: '4px 8px', 
                  background: '#f0f2f5', 
                  borderRadius: '12px', 
                  display: 'inline-block',
                  fontSize: '12px',
                  color: '#666'
                }}>
                  {feature.highlight}
                </div>
              </div>
              <Title level={4} style={{ textAlign: 'center', marginBottom: 12 }}>
                {feature.title}
              </Title>
              <Paragraph 
                style={{ 
                  textAlign: 'center', 
                  color: '#666',
                  flex: 1,
                  marginBottom: 16 
                }}
              >
                {feature.description}
              </Paragraph>
              <div style={{ textAlign: 'center' }}>
                <Button type="link" icon={<RightOutlined />}>
                  访问模块
                </Button>
              </div>
            </Card>
          </Col>
        ))}
      </Row>

      {/* Technology Stack */}
      <Card style={{ marginTop: 32 }}>
        <Title level={3} style={{ textAlign: 'center', marginBottom: 24 }}>
          技术架构
        </Title>
        <Row gutter={16}>
          <Col span={8}>
            <div style={{ textAlign: 'center', padding: '16px' }}>
              <Title level={4}>后端技术</Title>
              <Space direction="vertical" size="small">
                <Text>Go + Ent ORM</Text>
                <Text>GraphQL API</Text>
                <Text>Temporal.io 工作流</Text>
                <Text>PostgreSQL 时态表</Text>
              </Space>
            </div>
          </Col>
          <Col span={8}>
            <div style={{ textAlign: 'center', padding: '16px' }}>
              <Title level={4}>数据层</Title>
              <Space direction="vertical" size="small">
                <Text>Neo4j 图数据库</Text>
                <Text>时态数据模型</Text>
                <Text>元合约架构</Text>
                <Text>数据一致性保证</Text>
              </Space>
            </div>
          </Col>
          <Col span={8}>
            <div style={{ textAlign: 'center', padding: '16px' }}>
              <Title level={4}>前端技术</Title>
              <Space direction="vertical" size="small">
                <Text>React + Next.js</Text>
                <Text>TypeScript</Text>
                <Text>Ant Design</Text>
                <Text>Apollo GraphQL</Text>
              </Space>
            </div>
          </Col>
        </Row>
      </Card>

      {/* Footer */}
      <div style={{ textAlign: 'center', marginTop: 48, padding: '24px', color: '#666' }}>
        <Text type="secondary">
          Employee Model Management System v2.0 - 生产就绪版本
        </Text>
        <br />
        <Text type="secondary" style={{ fontSize: '12px' }}>
          基于现代化技术栈构建，支持大规模企业级应用
        </Text>
      </div>
    </div>
  );
};

export default HomePage;