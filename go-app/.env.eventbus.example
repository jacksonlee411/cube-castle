# EventBus Configuration Example
# This file shows the environment variables that can be used to configure the EventBus system

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=cube_castle
KAFKA_CONSUMER_GROUP=cube_castle_consumers

# Performance Configuration
KAFKA_BATCH_SIZE=100
KAFKA_BATCH_TIMEOUT=100ms
KAFKA_MAX_RETRIES=3
KAFKA_RETRY_BACKOFF=2s

# Monitoring Configuration
KAFKA_ENABLE_METRICS=true
KAFKA_METRICS_PREFIX=cube_castle_eventbus

# TLS Configuration (optional)
KAFKA_ENABLE_TLS=false
# KAFKA_TLS_CERT_FILE=/path/to/client.crt
# KAFKA_TLS_KEY_FILE=/path/to/client.key
# KAFKA_TLS_CA_FILE=/path/to/ca.crt
# KAFKA_TLS_SKIP_VERIFY=false

# Development Mode
# Leave KAFKA_BOOTSTRAP_SERVERS empty to use Mock EventBus for development
# KAFKA_BOOTSTRAP_SERVERS=